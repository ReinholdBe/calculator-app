<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="273dp" android:id="@+id/calcview"
                tools:text="0" android:textColor="#090808" android:textSize="70sp"
                android:orientation="horizontal" android:gravity="end"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_gravity="end" android:layout_height="60dp">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b7" android:layout_weight="0.8"
                    app:backgroundTint="#918D8D" android:textColor="#050505" android:lineSpacingExtra="0sp"
                    android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b8" android:layout_weight="0.8"
                    app:backgroundTint="#918D8D" android:textColor="#050505" android:lineSpacingExtra="0sp"
                    android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b9" android:layout_weight="0.8"
                    app:backgroundTint="#918D8D" android:textColor="#050505" android:lineSpacingExtra="0sp"
                    android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bplus" android:layout_weight="0.8"
                    app:backgroundTint="#918D8D" android:textColor="#050505" android:lineSpacingExtra="0sp"
                    android:textSize="30sp"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="420dp"
                android:layout_height="60dp" android:layout_gravity="end">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b4" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b5" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b6" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bminus" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="60dp" android:layout_gravity="end">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b1" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b2" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b3" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="CE"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bCE" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="60dp" android:layout_gravity="end">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="7.9"/>
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/b0" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.5"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/bequa" android:layout_weight="1"
                    android:textColor="#050505" app:backgroundTint="#918D8D" android:textSize="30sp"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="7.9"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>